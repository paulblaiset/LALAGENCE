<div class="flat-card">
  <div class="flat-card-info">
    <div class="title-card">
      <span style="font-weight:bold; color:#2EC590"><%= flat.name %></span>
    </div>
    <ul>
      <li> Type : <%= flat.nb_room %></li>
      <li> Arrondissement : <%= flat.address %></li>
      <li> Superficie : <%=  flat.surface %></li>
      <li style="font-weight:bold; margin-top:10px;"><span> Prix : <%= flat.price.to_i %>â‚¬</span></li>
      <li style="color:#gray; padding-top:10px;">
        <i class="far fa-user"></i>
        <% if flat.candidatures.length > 0 %>
          <%= link_to "Nombre de candidature #{flat.candidatures.length}", agency_flat_path(flat.agency, flat) %>
        <% else %>
          Nombre de candidature <%= flat.candidatures.length %>
        <% end %>
      </li>
    </ul>
  </div>
  <div class="flat-card-pic" style="background-image: url('<%= cl_image_path flat.photo %>');border-radius: 3px;">
