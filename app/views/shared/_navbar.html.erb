<div class="navbar-wagon navbar-fixed-top">
  <!-- Logo -->
  <div class="sidebar-logo-container">
    <div>
    <%= link_to root_path , class: "navbar-wagon-brand" do %>
      <%= image_tag "logo_white.png", height: 15, class: 'logo-white' %>
      <%= image_tag "logo.png", height: 15, class: 'logo-green hidden' %>
      </div>
      <p style="font-family: Assistant;color:white">Lalagence</p>
    <% end %>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <% if current_user.agency_id %>
        <% agency_id = User.find(current_user.id).agency_id %>
        <% agency = Agency.find(agency_id) %>
        <%= link_to "Vos candidatures", agency_path(agency), class: "navbar-wagon-item navbar-wagon-link" %>
        <%= link_to "Vos biens", agency_flats_path(agency), class: "navbar-wagon-item navbar-wagon-link" %>
        <%= link_to "Ajouter un bien", new_agency_flat_path(agency), class: "navbar-wagon-item navbar-wagon-link" %>
      <% else %>
        <%= link_to "Mon dossier", edit_user_path(current_user), class: "navbar-wagon-item navbar-wagon-link" %>
        <%= link_to "Ma sélection", "#", class: "navbar-wagon-item navbar-wagon-link" %>
        <%= link_to "Mon historique", user_candidatures_path(current_user), class: "navbar-wagon-item navbar-wagon-link" %>
        <%= link_to "Déposer un dossier", new_user_candidature_path(current_user), class: "navbar-wagon-item navbar-wagon-link" %>
      <% end %>
      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <% if current_user.photo.present? %>
            <%= cl_image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% else %>
            <span id="navbar-wagon-menu" data-toggle="dropdown"><%= image_tag "icon_renter_guy_off.png", class: "avatar dropdown-toggle" %></span>
          <% end %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user" style="color:$light-green"></i> <%= t(".profile", default: "Dashboard") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>
