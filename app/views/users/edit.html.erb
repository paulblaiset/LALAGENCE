<div class="profil-edit-container">
  <h1>Votre Dossier <span class="step-progress-bar step-progress-bar-begin"><span style="width: <%= @step == 1 ? "0" : "50"; %>%;"></span></span></h1>
  <div class="add_a_guarantor">
      <%= image_tag("add.png") %>
      <span>Ajouter un guarant</span>
    </div>
  <div class="nav-pills-content">
    <div class="content-pill">
      <ul class="nav nav-pills">
        <li class="<%= 'active' if @step == 1 %>">
          <%= link_to "#1a", class: "tab-btn tab-me", data: { toggle: "tab"} do %>
            <%= image_tag "icon_renter_guy_off.png", alt: ""%>
            <span class="title">Moi</span>
          <% end %>
        </li>
        <li class="<%= 'active' if @step == 2 %>">
          <%= link_to "#2a", class: "tab-btn tab-guarantor", data: {toggle: "tab"} do %>
            <%= image_tag "icon_guarantor_girl_off.png", alt: ""%>
            <span class="title">Mon garant nÂ°1</span>
          <% end %>
        </li>
        <li>
          <span class="tab-btn tab-valide"><%= image_tag "icon_complete_off.png", alt: ""%><span class="title">Mon dossier</span></span>
        </li>
      </ul>
    </div>
  </div>
  <div class="tab-content clearfix">
    <div class="tab-pane <%= 'active' if @step == 1 %>" id="1a">
      <%= render 'shared/form' %>
    </div>
    <div class="tab-pane <%= 'active' if @step == 2 %>" id="2a">
      <%= render 'shared/form_guarantor' %>
    </div>
  </div>
</div>
