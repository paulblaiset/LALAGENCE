/* Afficher la card à côté du formulaire après l'envoi du mail,
et on mets le message de validation d'envoi de mail (script pour ajax) */

function validate(message) {
  const formCandidature = document.querySelector('.envoyez-le-container');
  formCandidature.classList.add('validate');
  formCandidature.innerHTML = `<div>${message} <i class="fa fa-check-circle"></i></div>`;
}

function addCard(newCard) {
  const apercu = document.querySelector('.apercu');
  apercu.innerHTML = newCard;
}

validate("Votre dossier a été envoyé à : <%= @candidature.mail_agency %>")
addCard("<%= j render 'shared/flat_card', candidature: @candidature.reload %>");
