<div class="row">
  <div class="col-xs-12 col-md-6">
    <%= simple_form_for [current_user, @candidature], html: { class: 'form-horizontal' },wrapper: :horizontal_form do |f|%>
      <%= f.input :url_flat_id, label_html: { class: 'col-xs-12 col-md-3' }, input_html: { class: 'col-xs-12 col-md-7' }, wrap_with: { tag: 'div', class: 'col-md-7' }, wrapper_html: { class: 'row' } %>
