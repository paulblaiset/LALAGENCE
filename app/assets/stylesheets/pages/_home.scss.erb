// Specific CSS for your home-page
.banner-home{
  height:70vh;
  background:linear-gradient(-225deg, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.4) 50%), asset-url('bannerimage') no-repeat;
  background-size:100%;
  position:relative;
}
.banner-home .form-container{
  position:absolute;
  bottom: 73px;
  left:20px;
  padding: 20px;
  width:100%;
  max-width: 900px;
  color:white;
}
.icon-home{
  padding:0 15px;
  position:relative;
  margin-bottom:50px;
}
.icon-home::before{
  content:"";
  display: block;
  position:absolute;
  left:0;
  top:0;
  right: 0;
  bottom:0;
  z-index: 4;
  background:#fff;
  transform-origin:0 0;
  transform:skewY(-2deg);
  border-top:8px solid $light-green;
}
.icon-home .col-icon-home{
  text-align:center;
  padding-top:50px;
  padding-bottom:15px;
  position:relative;
  z-index: 6;

}
.col-icon-img {
margin: 0 auto;
width: 50px;
}

.col-icon-title {
margin-top:10px;
}

.btn-medium {
  display: flex;
  justify-content: space-around;
  align-items: center;
  border: 1px solid rgb(209, 209, 209);
  color: rgb(209, 209, 209);
  width: 150px;
  border-radius: 20px;
  height: 40px;
  margin: 20px 0px;
  text-decoration: none;
  font-size: 12px;
  font-weight: lighter;
}

.btn-medium a {
  text-decoration: none;
  color: white;

}
