.container-form-profile .custom-file{
  width: 50px;
  height: 50px;
  background: #fff;
  position: relative;
  cursor: pointer;
  border:1px solid #D8E2E1;
  border-radius:3px;
  font-size:9px;
  margin:0 5px;
  display: inline-block;
}
.container-form-profile .form-control-label,
.container-form-profile label.file{
  font-weight: normal;
}
.container-form-profile .custom-file label.file{
  position:absolute;
  margin:0;
  bottom:3px;
  left:0;
  right:0;
  text-align: center;
  padding: 0 3px;
  word-wrap: break-word;
}
.container-form-profile .form-control-file{
  position: absolute;
  width:100%;
  opacity: 0;
  cursor: pointer;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  z-index: 10;
}
.container-form-profile .btn-send{
  background:$pink;
  color:#fff;
}
