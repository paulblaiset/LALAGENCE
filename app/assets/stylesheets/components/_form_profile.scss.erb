.container-form-profile{
  padding:64px 0;
}
.container-form-profile .form-section{
  padding:0 0 20px;
}
.container-form-profile .form-control{
  border-radius: 50px !important;
}
.container-form-profile .form-control:focus{
  border-color: $light-green;
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(61, 234, 185, 0.6);
}


.container-form-profile .custom-file{
  width: 50px;
  height: 50px;
  background: #fff;
  position: relative;
  cursor: pointer;
  border:1px solid #D8E2E1;
  border-radius:3px;
  font-size:9px;
  margin:0 5px;
  display: inline-block;
  background:linear-gradient(-225deg, rgba(0,0,0,0.0) 0%, rgba(0,0,0,0.0) 50%) , asset-url('uploadcload') no-repeat center #fff;
  background-size:65%;
}

.fa-check-circle {
  color:$light-green;
  margin:0!important;
}


.profil-edit-container .form-control {
    height: 27px;
    font-size: 12px;
    border-radius: 50px;
  }

.container-form-profile .form-control-label,
.container-form-profile label.file{
  font-weight: normal;
}
.container-form-profile .custom-file label.file{
  position:absolute;
  margin:0;
  bottom:3px;
  left:0;
  right:0;
  text-align: center;
  padding: 0 3px;
  word-wrap: break-word;
}
.container-form-profile .form-control-file{
  //position: absolute;
  width:100%;
  height: 100%;
  opacity: 0;
  cursor: pointer;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  z-index: 10;
}

