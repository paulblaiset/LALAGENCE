.container-form-profile{
  padding:20px 0;
}
.container-form-profile .form-section{
  padding:0 0 20px;
}
.container-form-profile .form-control{
  border-radius: 50px;
}
.container-form-profile .form-control:focus{
  border-color: $light-green;
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(61, 234, 185, 0.6);
}
