.nav-pills-content{
  text-align:center;
  height: 162px;
}
.nav.nav-pills{
  display: inline-block;
  position: relative;
  span.title {
    color:$light-green;
    font-size: 10px;
    position:absolute;
    left:0;
    right:0;
    bottom: -20px;
    text-align:center;
    z-index:5;
  }
}
.nav.nav-pills::after{
  content:"";
  display:block;
  border:1px solid $light-green;
  display: inline-block;
  position:absolute;
  left:0;
  right:0;
  top:50%;
  transform:translateY(-50%);
}
.nav.nav-pills .tab-btn{
  display:inline-block;
  height:80px;
  width:80px;
  padding:0;
  position:relative;
  z-index: 10;
}
.nav.nav-pills li{
  margin:0 110px;
  position:relative;
}
.nav.nav-pills li:first-child{
  margin-left: 0;
}
.nav.nav-pills li:last-child{
  margin-right: 0;
}
.nav.nav-pills li.active::after{
  content:"";
  display:block;
  position:absolute;
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 0 64px 64px 64px;
  border-color: transparent transparent #FAFAFA transparent;
  bottom:-111px;
  left:-24px;
}
.nav.nav-pills .tab-btn,
.nav-pills > li.active > a, .nav-pills > li.active > a:hover, .nav-pills > li.active > a:focus,
.nav.nav-pills > li.active > a, .nav-pills > li.active > a:hover, .nav-pills > li.active > a:focus{
  background-color: #fff;
  opacity: 1;
}
